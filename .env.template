# Bot Configuration
TELEGRAM_BOT_TOKEN="your-bot-token-here"
CREDIT_CARD_TOKEN="your-credit-card-token-here"

# Database Configuration
DB_ENGINE="sqlite:///database.sqlite"

# Security Settings
SECRET_KEY="change-this-to-a-secure-secret-key"
ENCRYPTION_KEY="change-this-to-a-secure-encryption-key"

# Environment
ENVIRONMENT="development"
DEBUG="True"

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=30

# Session Configuration
SESSION_TIMEOUT=7200
MAX_SESSIONS_PER_USER=1

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="{asctime} | {threadName} | {name} | {levelname} | {message}" 